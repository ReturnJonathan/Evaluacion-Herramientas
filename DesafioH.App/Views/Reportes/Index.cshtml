@using DesafioH.Modelos;

@model DesafioH.App.Models.Reports.ReportsIndexVM

@{
    ViewData["Title"] = "Reportes de Tareas";
}

<h1>@ViewData["Title"]</h1>

<form method="get" class="row gx-3 gy-2 align-items-end mb-4">
    <div class="col-auto">
        <label asp-for="Query" class="form-label">Buscar</label>
        <input asp-for="Query" class="form-control" />
    </div>
    <div class="col-auto">
        <label asp-for="Estado" class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoTarea>()">
            <option value="">Todos</option>
        </select>
    </div>
    <div class="col-auto">
        <label asp-for="Prioridad" class="form-label">Prioridad</label>
        <input asp-for="Prioridad" type="number" class="form-control" />
    </div>
    <div class="col-auto">
        <label asp-for="Desde" class="form-label">Desde</label>
        <input asp-for="Desde" type="date" class="form-control" />
    </div>
    <div class="col-auto">
        <label asp-for="Hasta" class="form-label">Hasta</label>
        <input asp-for="Hasta" type="date" class="form-control" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Filtrar</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Estado</th>
            <th>Prioridad</th>
            <th>Creación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Tareas)
        {
            <tr>
                <td>@t.Titulo</td>
                <td>@t.Estado</td>
                <td>@t.Prioridad</td>
                <td>@t.FechaCreacion.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
