@model DesafioH.Modelos.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Deseas eliminar esta tarea?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Prioridad</dt>
        <dd class="col-sm-10">@Model.Prioridad</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-link">Cancelar</a>
</form>
