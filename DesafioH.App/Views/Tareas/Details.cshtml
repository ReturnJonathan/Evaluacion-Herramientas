@model DesafioH.Modelos.Tarea

@{
    ViewData["Title"] = "Detalle de Tarea";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Prioridad</dt>
        <dd class="col-sm-10">@Model.Prioridad</dd>

        <dt class="col-sm-2">Fecha de Vencimiento</dt>
        <dd class="col-sm-10">@Model.FechaVencimiento</dd>

        <dt class="col-sm-2">Fecha de Creación</dt>
        <dd class="col-sm-10">@Model.FechaCreacion</dd>

        <dt class="col-sm-2">ProyectoId</dt>
        <dd class="col-sm-10">@Model.ProyectoId</dd>

        <dt class="col-sm-2">UsuarioAsignadoId</dt>
        <dd class="col-sm-10">@Model.UsuarioAsignadoId</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Editar</a>
    <a asp-action="Index" class="btn btn-link">Volver al listado</a>
</p>
