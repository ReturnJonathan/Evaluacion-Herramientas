@model DesafioH.Modelos.Proyecto

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Deseas eliminar este proyecto?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-link">Cancelar</a>
</form>
