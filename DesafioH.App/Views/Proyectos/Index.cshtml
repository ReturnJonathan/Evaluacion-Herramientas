@model IEnumerable<DesafioH.Modelos.Proyecto>

@{
    ViewData["Title"] = "Listado de Proyectos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Proyecto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Fecha Creación</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Descripcion</td>
                <td>@p.FechaCreacion</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@p.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
